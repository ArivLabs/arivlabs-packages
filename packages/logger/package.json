{
  "name": "@arivlabs/logger",
  "version": "1.5.0",
  "description": "Structured logging for Node.js services with CloudWatch support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "pino-pretty": "^13.0.0"
  },
  "peerDependenciesMeta": {
    "pino-pretty": {
      "optional": true
    }
  },
  "keywords": [
    "logging",
    "pino",
    "cloudwatch",
    "structured-logging",
    "nodejs",
    "typescript"
  ],
  "author": "ArivLabs <hello@arivlabs.com>",
  "license": "MIT",
  "homepage": "https://github.com/ArivLabs/arivlabs-packages/tree/main/packages/logger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArivLabs/arivlabs-packages.git",
    "directory": "packages/logger"
  },
  "bugs": {
    "url": "https://github.com/ArivLabs/arivlabs-packages/issues"
  }
}
